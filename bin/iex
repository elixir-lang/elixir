#!/bin/sh
SCRIPT_PATH=`dirname $0`
ELIXIR_PATH=`cd $SCRIPT_PATH; cd ..; pwd`

# Readline support in the form of rlwrap
if type rlwrap > /dev/null 2>&1
then 
  echo "Found rlwrap, enabling readline support."; 
  rlwrap bin/elixir -f "Code.require \"iex\";IEX.new.loop"
else 
  bin/elixir -f "Code.require \"iex\";IEX.new.loop"
fi
